<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_big_16dp"
        android:layout_marginEnd="@dimen/dimen_big_16dp"
        android:layout_marginBottom="@dimen/dimen_medium_8dp"
        android:background="@drawable/background_card"
        android:elevation="@dimen/dimen_small_4dp"
        android:paddingStart="@dimen/dimen_big_16dp"
        android:paddingEnd="@dimen/dimen_big_16dp"
        android:paddingTop="@dimen/dimen_medium_8dp"
        android:paddingBottom="@dimen/dimen_medium_8dp">

    <TextView
            android:id="@+id/tv_title_example_script"
            android:layout_width="0dp"
            android:textColor="@color/colorPrimary"
            android:maxLines="1"
            tools:text="@string/dummy"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/tv_description_example_script"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:id="@+id/tv_description_example_script"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_small_4dp"
            android:maxLines="2"
            tools:text="@string/dummyLong"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_title_example_script" />
</androidx.constraintlayout.widget.ConstraintLayout>