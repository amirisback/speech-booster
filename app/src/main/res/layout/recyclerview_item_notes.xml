<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_big_16dp"
        android:layout_marginLeft="@dimen/dimen_big_16dp"
        android:padding="@dimen/dimen_medium_8dp"
        android:orientation="vertical"
        android:elevation="@dimen/dimen_small_4dp"
        android:background="@drawable/background_card">

    <TextView
            android:text="@string/dummy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_title"
            tools:layout_editor_absoluteY="8dp" tools:layout_editor_absoluteX="8dp"/>
    <TextView
            android:text="@string/dummyLong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_description"
            android:minLines="3"
            android:maxLines="8"
            tools:layout_editor_absoluteY="35dp" tools:layout_editor_absoluteX="8dp"/>
</LinearLayout>