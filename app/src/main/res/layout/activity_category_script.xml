<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundWhite"
    tools:context=".mvvm.category.CategoryScriptActivity">

    <com.frogobox.recycler.widget.FrogoRecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ads"
        android:clipToPadding="false"
        android:paddingTop="@dimen/dimen_big_16dp"
        tools:context=".mvvm.category.CategoryScriptActivity"
        tools:listitem="@layout/recyclerview_item_category_script" />

    <ProgressBar
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <include android:id="@+id/ads"
        layout="@layout/view_ads_banner" />

</RelativeLayout>