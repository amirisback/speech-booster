<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
        package="com.frogobox.speechbooster">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
            android:allowBackup="true"
            android:icon="@drawable/ic_launcher_apps"
            android:label="@string/app_name"
            android:roundIcon="@drawable/ic_launcher_apps"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".view.ui.activity.SplashScreenActivity"
                android:theme="@style/AppThemeNoToolbar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.ui.activity.CategoryScriptActivity" />
        <activity android:name=".view.ui.activity.AboutUsActivity" />
        <activity
                android:name=".view.ui.activity.RecordActivity"
                android:theme="@style/AppThemeNoToolbar" />
        <activity android:name=".view.ui.activity.ScriptEditorActivity" />
        <activity android:name=".view.ui.activity.VideoDetailActivity" />
        <activity android:name=".view.ui.activity.ScriptDetailActivity" />
        <activity
                android:name=".view.ui.activity.MainActivity"
                android:theme="@style/AppThemeNoToolbar"/>
    </application>

</manifest>